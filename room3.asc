function oGift01_Interact(Object *theObject, CursorMode mode)
{
  WalkToObjectAndPickup(theObject);
  numGifts++;
  cMonty.AddInventory(iGift01);
  String message = String.Format("You have: %d Gifts",  numGifts);
  cMonty.Say(message);
}

