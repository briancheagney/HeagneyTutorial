function room_AfterFadeIn()
{
  sawBox=Random(5)+1;
  DynoBox=Random(5+1);
  if (DynoBox==sawBox)
  {
    if (sawBox==6)
    {
      DynoBox=1;
    }
    else
    {
      DynoBox=sawBox+1;
    }
  }
}

